<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConditionsFragment">

    <!-- Scrollable container for the image -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- ImageView to display the image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="User Account"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/dmsans_24pt_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="You must be 18 years of age or older to create an account on the Marketplace.
You are responsible for maintaining the confidentiality of your account information and for all activity that occurs under your account.
You agree to keep your account information accurate and updated.
"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/dmsans_24pt_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:text="Intelectual Property"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/dmsans_24pt_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="You retain ownership of your intellectual property rights to the content you upload.
AXForA reserves all rights to the Marketplace platform and its content."
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/dmsans_24pt_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disclaimer"

                    android:layout_marginTop="12dp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/dmsans_24pt_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="AXForA does not guarantee the quality, functionality, or compatibility of any assets on the Marketplace.
You use the Marketplace at your own risk."
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/dmsans_24pt_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>
        </HorizontalScrollView>

    </ScrollView>
</FrameLayout>
